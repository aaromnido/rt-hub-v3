---
import ArrowSmallRight from 'astro-heroicons/outline/ArrowSmallRight.astro';

interface Props {
	slug: string;
	course: string;
	thumbnailURL: string;
	author: string;
}

const { slug, course, thumbnailURL, author } = Astro.props;
---


<div class="card-item dark-card">
    <div class="wrapper">
       <div class="image" style={'background-image: url(' + thumbnailURL + ')'}></div>
       <div class="container">
            <h6>{ author }</h6>
            <p>{ course }</p>
           <a class="primary-button" href=`/showcases/${slug}`>
            See Projects <ArrowSmallRight class="w-6 h-6" />
           </a>
       </div>
    </div>
</div>

<style>
    .container{
        @apply text-center;
    }
    h6{
        @apply text-sm mb-4;
    }
    p{
        @apply text-center;
    }
    a.primary-button{
        @apply w-full mt-6;
    }
</style>