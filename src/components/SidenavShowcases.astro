---
import data from '../data/showcases-data.json';
let showcases = data.slice(1, 12);
---

<div class="sidenav">
    <h4 class="sidenav-header">Projects</h4>
        <ul class="sidenav-menu">

        {
            new Array(6).fill(null).map((_, index) => (
                showcases.map((item) => (
                    <li class="sidenav-item">
                        <a href={ item.slug } class="active-">
                            <h6>{ item.author }</h6>
                            <p>{ item.course }</p>
                        </a>
                    </li>
                ))
            ))
        }
        </ul>
    <div class="sidenav-shadow"></div>
</div>

