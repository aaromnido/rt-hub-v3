---
// Layout
import Layout from '../../layouts/Layout.astro';

// Components
import ArrowSmallRight from 'astro-heroicons/outline/ArrowSmallRight.astro';
import Separator from '../../components/Separator.astro';
import SectionHeader from '../../components/SectionHeader.astro';
import CardCourse from '../../components/CardCourse.astro';
import data from '../../data/showcases-data.json';

// Variables
const title = "RT-HUB - Showcases"

let showcases = new Map<string, string>();

let featuredShowcase = data.slice(0, 1);
let showcasesAll = data.slice(1, 12);
---

<Layout title={title}>

	<main class="main">
        <section class="courses-section dark-theme">
            <div class="section-container">
                <div class="section-wrapper pt-14">
        
                    <SectionHeader
                        title="Showcase of <strong>Stars</strong>"
                        subtitle="Check out the <strong>extraordinary achievements</strong> of our students<br><strong>Highlight your success</strong> and let the world see how far you've come."
                    />


                    {featuredShowcase.map((item) => (
                        <div class="card-item card-horizontal dark-card bg-white">
                            <div class="wrapper flex">
                                <div class="md:w-1/3">
                                    <div class="image" style={`background-image: url('/images/showcases/${item.thumbnailUrl}')`}></div>
                                </div>
                                <div class="md:w-2/3">
                                    <div class="container">

                                        <div class="mb-4">
                                            <span class="badge bg-pink-700">New</span>
                                        </div>

                                        <h3 class="text-xl font-semibold mb-3">{ item.title }</h3>
                                        <h5 class="font-normal text-slate-400 mb-4">{ item.course }</h5>
                                        <div class="user-data">
                                            <div class="col-span-7 lg:col-span-11">
                                                <p class="text-sm mb-1">
                                                    <strong>{ item.author }</strong> | { item.team }
                                                </p>
                                            </div>
                                        </div>
                                        <div class="cases-list-body mb-10">{ item.excerpt }</div>

                                        <a class="primary-button" href={`/showcases/${item.slug}`}>
                                            Start Learning NOW! <ArrowSmallRight class="w-6 h-6" />
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    ))}

                    <div class="grid-showcases mb-32">
                        {
                            new Array(6).fill(null).map((_, index) => (
                                showcasesAll.map((item) => (

                                    <a href={`/showcases/${item.slug}`} class="case">
                                        <div class="aspect-square overflow-hidden">
                                            <img src={`/images/showcases/${item.thumbnailUrl}`} alt="image" class="object-cover w-full h-full">
                                        </div>
                                        <div class="case-data">
                                            <div class="case-container">
                                                <h5 class="mt-2 mb-0 text-sm font-semibold h-10">
                                                    { item.title }
                                                </h5>
                                                <h6 class="font-normal text-slate-300 mb-4 text-xs">
                                                    { item.course }
                                                </h6>
                                                <div class="user-data">
                                                    <!--
                                                    <img class="inline-block h-9 w-9 rounded-full ring-1 ring-white"
                                                                src="https://source.unsplash.com/random/256x256?people&" alt="image" class="case-avatar">
                                                    -->
                                                    <p class="text-sm inline-block"><strong>{ item.author }</strong></p>
                                                </div>
                                            </div>
                                        </div>
                                    </a>

                                ))
                            ))
                        }

                    </div>
        
                </div><!-- Wrapper -->
             </div><!-- / Container -->
        </section><!-- / Courses section -->
		<Separator />
	</main>

</Layout>

