---
// Layout
import Layout from '../../layouts/Layout.astro';

// Components
import ArrowSmallRight from 'astro-heroicons/outline/ArrowSmallRight.astro';
import Separator from '../../components/Separator.astro';
import SectionHeader from '../../components/SectionHeader.astro';
import CardCourse from '../../components/CardCourse.astro';
import LogosPartners from '../../components/LogosPartners.astro';
import data from '../../data/courses-data.json';

// Variables
const title = "RT-HUB - Courses"

let courses = new Map<string, string>();

data.forEach(item => {
    courses.set(item.title, item.shortDescription);
});
let coursesAll = data.slice(1, 12);
let featuredCourse = data.slice(0, 1);
---

<Layout title={title}>

	<main class="main">
        <section class="courses-section dark-theme">
            <div class="section-container">
                <div class="section-wrapper pt-14">
        
                    <SectionHeader
                        title="Explore the <strong>Catalogue</strong></strong>"
                        subtitle="Online courses for creative professionals"
                    />

                    </div>
                    {featuredCourse.map((item) => (
                        
                        <div class="card-item card-horizontal dark-card mx-8">
                            <div class="wrapper flex">
                                <div class="md:w-1/3">
                                    <div class="image" style={`background-image: url('/images/courses/${item.thumbnailURL}')`}></div>
                                </div>
                                <div class="md:w-2/3">
                                    <div class="container">

                                        <div class="mb-4">
                                            <span class="badge bg-pink-700">New</span>
                                            <span class="badge bg-purple-300 text-blue-950">Real Time</span>
                                            <span class="badge bg-purple-300 text-blue-950">Shadding</span>
                                        </div>

                                        <h3 class="text-xl font-semibold mb-3">{ item.title }</h3>
                                        <p class="text-sm mb-6 text-slate-400">
                                            { item.shortDescription }
                                        </p>
                                        <p class="mb-4 font-medium uppercase text-sm">
                                            DIFFICULTY: <strong>{ item.difficulty }</strong>
                                        </p>
                                        <a class="primary-button" href={`/courses/${item.slug}`}>
                                            Start Learning NOW! <ArrowSmallRight class="w-6 h-6" />
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    ))}


                    <LogosPartners />

                    <div class="cards-grid mx-8">
                        {coursesAll.map((item) => (
                            <CardCourse
                                thumbnailURL={`/images/courses/${item.thumbnailURL}`}
                                title={item.title}
                                slug={item.slug}
                                shortDescription={item.shortDescription}
                                difficulty={item.difficulty}
        
                            />
                        ))}
                    </div>
        
                </div><!-- Wrapper -->
             </div><!-- / Container -->
        </section><!-- / Courses section -->
		<Separator />
	</main>

</Layout>

